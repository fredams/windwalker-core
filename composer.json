{
    "name": "windwalker/core",
    "description": "A modern PHP framework.",
    "homepage": "https://github.com/ventoviro/windwalker-core",
    "license": "GNU Lesser General Public License",
    "minimum-stability": "beta",
    "require": {
        "windwalker/framework": "~3.0",
        "symfony/yaml": "~3.0",
        "monolog/monolog": "~1.0",
        "filp/whoops": "~2.0"
    },
    "require-dev" : {
        "twig/twig": "~1.0",
        "illuminate/view": "~5.0"
    },
    "autoload" : {
        "psr-4" : {
            "Windwalker\\" : "src/",
            "Windwalker\\Core\\Test\\": "test/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.x-dev"
        }
    }
}
