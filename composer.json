{
	"name": "windwalker/core",
	"description": "A modern PHP framework.",
	"homepage": "https://github.com/ventoviro/windwalker-core",
	"license": "GNU Lesser General Public License",
	"minimum-stability": "beta",
	"require" : {
		"windwalker/framework" : "~2.0",
		"symfony/yaml" : "2.*@stable"
	},
	"require-dev" : {
		"joomla/datetime": "2.*@stable",
		"twig/twig": "1.*@stable",
		"illuminate/view": "4.*@stable"
	},
	"autoload" : {
		"psr-4" : {
			"Windwalker\\" : "src/",
			"Windwalker\\Core\\Test\\": "test/"
		}
	},
	"extra": {
		"branch-alias": {
			"dev-master" : "2.0-dev"
		}
	}
}
