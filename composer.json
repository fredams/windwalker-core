{
    "name": "windwalker/core",
    "description": "A modern PHP framework.",
    "homepage": "https://github.com/ventoviro/windwalker-core",
    "license": "LGPL-2.0-or-later",
    "minimum-stability": "beta",
    "require": {
        "php": ">=5.6",
        "windwalker/framework": "~3.0",
        "symfony/dotenv": "^4.2",
        "symfony/yaml": "~3.0",
        "monolog/monolog": "~1.0",
        "filp/whoops": "~2.0",
        "symfony/polyfill": "^1.8",
        "doctrine/annotations": "~1.0",
        "php-di/phpdoc-reader": "~2.0",
        "symfony/var-dumper": "^4.1"
    },
    "require-dev" : {
        "twig/twig": "~1.0",
        "illuminate/view": "~5.0"
    },
    "suggest": {
        "symfony/process": "Install ~3.0 if you require auto-answer when running custom scripts.",
        "tijsverkoyen/css-to-inline-styles": "Install ~2.0 if you want to use mail css inliner.",
        "symfony/var-dumper": "Install ^4.1 if you need ver-dumper server and use ds() to dump data."
    },
    "autoload" : {
        "psr-4" : {
            "Windwalker\\" : "src/",
            "Windwalker\\Core\\Test\\": "test/"
        },
        "files": [
            "src/Core/Utilities/helpers.php"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.x-dev"
        }
    }
}
